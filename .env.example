# GuardianLayer Environment Configuration
# Copy this file to .env and fill in your actual values

# Supabase Configuration
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Solana Configuration
VITE_SOLANA_RPC_URL=https://api.devnet.solana.com
VITE_SOLANA_NETWORK=devnet

# GuardianLayer Configuration
VITE_GUARDIAN_API_KEY=your-guardian-api-key
VITE_GUARDIAN_ENVIRONMENT=development

# Email Service Configuration (choose one)
# Resend
RESEND_API_KEY=your-resend-api-key

# SendGrid
SENDGRID_API_KEY=your-sendgrid-api-key

# Email Settings
GUARDIAN_FROM_EMAIL=noreply@yourapp.com

# Security Settings
VITE_BIOMETRIC_ENABLED=true
VITE_OTP_ENABLED=true
VITE_TIME_LOCK_ENABLED=true
VITE_DEFAULT_TIME_LOCK_THRESHOLD=1.0

# Development Settings
VITE_DEBUG_MODE=true
VITE_MOCK_BIOMETRIC=false
VITE_MOCK_OTP=false

# Analytics (optional)
VITE_ANALYTICS_ENABLED=false
VITE_ANALYTICS_API_KEY=your-analytics-key

# Monitoring (optional)
VITE_SENTRY_DSN=your-sentry-dsn
VITE_LOG_LEVEL=info
